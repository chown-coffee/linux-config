ln -sf $path/.config/kolourpaintrc $HOME/.config/kolourpaintrc

# mimeapps.list
echo "linking mimeapps.list"
ln -sf $path/.config/mimeapps.list $HOME/.config/mimeapps.list

######################
# .ncmpcpp directory #
######################

echo "############################"
echo "# \$HOME/.ncmpcpp directory #"
echo "############################"

echo "removing .ncmpcpp"
[ -d $HOME/.ncmpcpp ] && rm -rf $HOME/.ncmpcpp
echo "linking .ncmpcpp"
ln -sf $path/.ncmpcpp $HOME/.ncmpcpp

#######################
# .pylint.d directory #
#######################

echo "#############################"
echo "# \$HOME/.pylint.d directory #"
echo "#############################"

echo "removing .pylint.d"
[ -d $HOME/.pylint.d ] && rm -rf $HOME/.pylint.d
echo "compying .pylint.d"
ln -sf $path/.pylint.d $HOME/.pylint.d

###########################
# .screenlayout directory #
###########################

echo "#################################"
echo "#	\$HOME/.screenlayout directory #"
echo "#################################"

echo "removing .screenlayout"
[ -d $HOME/.screenlayout ] && rm -rf $HOME/.screenlayout
echo "compying .screenlayout"
ln -sf $path/.screenlayout $HOME/.screenlayout

######################
# .scripts directory #
######################

echo "############################"
echo "# \$HOME/.scripts directory #"
echo "############################"

echo "removing .scripts"
[ -d $HOME/.scripts ] && rm -rf $HOME/.scripts
echo "linking .scripts"
ln -sf $path/.scripts $HOME/.scripts

#######################
# .vim-custom-plugins #
#######################

echo "#######################################"
echo "# \$HOME/.vim-custom-plugins directory #"
echo "#######################################"

echo "removing .vim-custom-plugins"
[ -d $HOME/.vim-custom-plugins ] && rm -rf $HOME/.vim-custom-plugins
echo "linking .vim-custom-plugins"
ln -sf $path/.vim-custom-plugins $HOME/.vim-custom-plugins

#########
# .wine #
#########

echo "###############"
echo "# \$HOME/.wine #"
echo "###############"

echo "removing .wine"
[ -d $HOME/.wine ] && rm -rf $HOME/.wine
