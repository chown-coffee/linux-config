[ -d $HOME/.config/shellconfig ] && rm -rf $HOME/.config/shellconfig
echo "linking shellconfig"
ln -sf $path/.config/shellconfig $HOME/.config/shellconfig

# sxhkd
echo "removing sxhkd"
[ -d $HOME/.config/sxhkd ] && rm -rf $HOME/.config/sxhkd
echo "linking sxhkd"
ln -sf $path/.config/sxhkd $HOME/.config/sxhkd

# sxiv
echo "removing sxiv"
[ -d $HOME/.config/sxiv ] && rm -rf $HOME/.config/sxiv
echo "linking sxiv"
ln -sf $path/.config/sxiv $HOME/.config/sxiv

# QtProject.conf
echo "linking QtProject.conf"
ln -sf $path/.config/QtProject.conf $HOME/.config/QtProject.conf

# dleyna-renderer-service.conf
echo "linking dleyna-renderer-service.conf"
ln -sf $path/.config/dleyna-renderer-service.conf $HOME/.config/dleyna-renderer-service.conf

# dleyna-server-service.conf
echo "linking dleyna-server-service.conf"
ln -sf $path/.config/dleyna-server-service.conf $HOME/.config/dleyna-server-service.conf

# dragonplayerrc
echo "linking dragonplayerrc"
ln -sf $path/.config/dragonplayerrc $HOME/.config/dragonplayerrc

