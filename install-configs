# .Suckless #
#############

echo "###################"
echo "# \$HOME/.Suckless #"
echo "###################"

echo "removing Suckless"
[ -d $HOME/Suckless ] && rm -rf $HOME/Suckless
echo "linking Suckless"
ln -sf $path/Suckless $HOME/Suckless

####################
# vim-plug-install #
####################

echo "##########################"
echo "# \$HOME/vim-plug-install #"
echo "##########################"

echo "removing vim-plug-install"
[ -d $HOME/vim-plug-install ] && rm -rf $HOME/vim-plug_install
echo "linking vim-plug-install"
ln -sf $path/vim-plug-install $HOME/vim-plug_install

################
# wal-palettes #
################

echo "#######################"
echo "# \$HOME/wal-palettes #"
echo "#######################"

echo "removing wal-palettes"
[ -d $HOME/wal-palettes ] && rm -rf $HOME/wal-palettes
echo "linking wal-palettes"
ln -sf $path/wal-palettes $HOME/wal-palettes

#############
# wallpaper #
#############

echo "###################"
echo "# \$HOME/wallpaper #"
